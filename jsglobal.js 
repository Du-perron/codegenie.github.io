// js/global.js - Global Functionality (Dark Mode, Console Messages)

// Dark Mode Toggle
const darkModeBtn = document.querySelector('#darkModeBtn');

if (darkModeBtn) {
    darkModeBtn.addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');

        if (document.body.classList.contains('dark-mode')) {
            this.textContent = 'â˜€ï¸ Light Mode';
            console.log('ðŸŒ™ Dark mode activated!');
            localStorage.setItem('darkMode', 'true');
        } else {
            this.textContent = 'ðŸŒ™ Dark Mode';
            console.log('â˜€ï¸ Light mode activated!');
            localStorage.setItem('darkMode', 'false');
        }
    });
}

// Load dark mode preference on page load
window.addEventListener('DOMContentLoaded', function() {
    if (localStorage.getItem('darkMode') === 'true') {
        document.body.classList.add('dark-mode');
        if (darkModeBtn) {
            darkModeBtn.textContent = 'â˜€ï¸ Light Mode';
        }
    }
});

// Welcome message in console
console.log('%cðŸš€ Welcome to Kayitare\'s Portfolio! ðŸš€', 'color: #667eea; font-size: 20px; font-weight: bold;');
console.log('%cðŸ’» Thanks for visiting! Feel free to explore and interact with the page.', 'color: #764ba2; font-size: 14px;');
console.log('%câœ¨ Made with passion and creativity! âœ¨', 'color: #00d4ff; font-size: 14px;');

// Page load animation
window.addEventListener('load', function() {
    console.log('ðŸ“„ Page fully loaded! ðŸŽ‰');
    document.body.style.opacity = '1';
});

// Scroll to top button (optional)
window.addEventListener('scroll', function() {
    if (window.scrollY > 300) {
        // You can add a scroll-to-top button here if needed
    }
});

console.log('ðŸŒŸ Global functionality loaded!');
